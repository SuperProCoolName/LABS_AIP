#include <iostream>
using namespace std;

int main() {
    double average, best_score = 0;
    const int SIZE = 5;
    int st[SIZE];
    for (int i = 0; i < SIZE; i++) {
        cin >> st[i];
    }

    double counter = 0, sum = 0;
    for (int j = 0; j < SIZE; j++) {
        for (int i = 0; i < SIZE - j; i++) {
            if (st[i] < st[i + 1]) {
                int temp = st[i];
                st[i] = st[i + 1];
                st[i + 1] = temp;
            }
        }
    }

    for (int i = 0; i < SIZE; i++) {
        sum += st[i];
        counter++;
        cout << st[i] << ' ';
        if (st[i] >= 4)
            best_score++;
    }
    average = sum / counter;

    cout << endl << "counter = " << counter << endl << "sum = " << sum << endl << "average = " << average << endl << "students with grade 4 or more = " << best_score << endl;
    system("pause");
    return 0;
}
