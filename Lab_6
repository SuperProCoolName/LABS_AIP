#include <iostream>
using namespace std;

int CountLetter(string str, char letter) //функция, которая считает, сколько раз в строке встретилась буква (на основе функции из методички)
{
    int p = -1, res = 0; //p - место, где встретилась буква, res - сколько раз
    do //повторяем
    {
        p = str.find(letter, p + 1); //ищем в строке букву со старого места + 1, сохраняем в р
    if (p != string::npos) //если нашли
        res++; //увеличиваем результат
    }while (p != string::npos); //до тех пор пока находим
    return res; //возвращаем результат
}
int main()
{
    char glasnie[] = {'a', 'e','i','o','u','y'}; //массив всех глассных
    int val[6]; //здесь будут храниться результаты для каждой гласной отдельно
    int g = 0, sogl = 0; //g - номер гласной, которую проверяем, sogl - сколько всего согласных встретилось
    string str = "test string with some letters 1111 aaaaaa"; //создаем тестовую строку
    int res; // временная переменная, в которой будем хранить результат нашей функции
    for(char c = 'a'; c <= 'z'; c++) //проходимся в цикле по всем буквам английского алфавита 
    {
        res = CountLetter(str, c); //сохраняем в res результат нашей функции для текущей буквы
        if (c == glasnie[g]) //если текущая буква - гласная
        {
            val[g] = res; //сохраняем в массиве результат для текущей гласной 
            g++; //переходим к след. гласной
        }
        else //иначе
            sogl += res; //добавляем к числу согласных результат функции
    }
    
    cout « "Soglasnih: " « sogl « endl; //выводим сколько было согласных в слове
    for (int i = 0; i < 6; i++) //проходимся по всем элементам массива с гласными буквами с помощью i от 0 до 6
        cout « glasnie[i] « " " « val[i] « endl; // выводим саму букву и сколько раз она встретилась
 return 0;
} 
